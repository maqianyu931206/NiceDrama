<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin_bg_night">
    <include layout="@layout/include_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ECoder_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:background="@drawable/shape_main_imageview" />

    <EditText
        android:id="@+id/ECoder_input"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ECoder_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_main_edit"
        android:hint="@string/xml_lw_et" />
    <com.maqianyu.nicedrama.myset.view.ArcMenuView
        android:id="@+id/arcmenu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/composer_button" >

            <ImageView
                android:id="@+id/id_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/composer_icn_plus" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/id_button_save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/btn_signin_sucess"
            android:tag="sleep"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <ImageView
            android:id="@+id/id_button_saomiao"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_more_contribution"
            android:tag="thought" />
        <ImageView
            android:id="@+id/id_button_create"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_more_credit"
            android:tag="thought" />
        <ImageView
            android:id="@+id/id_button_write"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_more_feedback"
            android:tag="with" />
    </com.maqianyu.nicedrama.myset.view.ArcMenuView>
    </RelativeLayout>




    </LinearLayout>