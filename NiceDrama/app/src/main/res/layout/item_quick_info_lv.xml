<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_quick_info_img"
        android:layout_width="30dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_height="30dp" />

    <RelativeLayout
        android:layout_toRightOf="@id/item_quick_info_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/item_quick_info_author_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_quick_info_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:layout_below="@id/item_quick_info_author_name_tv"
            android:textColor="#747373"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_quick_info_time_tv"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#9d9d9d"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>
