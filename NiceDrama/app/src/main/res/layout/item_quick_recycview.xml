<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_quick_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="2dp"
            android:background="@mipmap/logo"
            android:scaleType="fitXY" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@id/item_quick_img"
            android:layout_marginTop="20dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_quick_cir_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_launcher"
            android:layout_alignBottom="@id/view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/item_quick_tv"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="10sp"
            android:text="ssss"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/item_quick_cir_img" />
        <ImageView
            android:layout_toLeftOf="@id/item_quick_tv"
            android:layout_width="16dp"
            android:background="@mipmap/xinxing"
            android:layout_alignParentBottom="true"
            android:layout_height="16dp" />
    </RelativeLayout>

</FrameLayout>